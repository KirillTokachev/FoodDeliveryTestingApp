<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodDeliveryTestingApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="CategoryButtonStyle">
        <item name="backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#C3C4C9</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CategoryButtonStyleOpen">
        <item name="backgroundTint">#33FD3A69</item>
        <item name="android:textColor">#FD3A69</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>